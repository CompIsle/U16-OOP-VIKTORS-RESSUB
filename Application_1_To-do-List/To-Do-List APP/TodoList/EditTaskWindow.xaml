<Window x:Class="TodoList.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Task" Height="200" Width="400">
    <Grid Background="#F0F0F0">
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBox x:Name="txtTitle" Width="373" Margin="0,0,10,0" Text="Title"/>
            <TextBox x:Name="txtDescription" Width="371" Margin="0,0,10,0" Text="Description"/>
            <DatePicker x:Name="dpDueDate" Margin="0,0,10,0"/>
            <Button Content="Update Task" Click="UpdateTask_Click" Background="#4CAF50" Foreground="White" Padding="10,2" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>
